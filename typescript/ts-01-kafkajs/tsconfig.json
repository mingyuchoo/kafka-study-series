{
  "compilerOptions": {
    "rootDir": "src",
    "target": "es2016",
    "lib": ["ESNext", "DOM"],
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
